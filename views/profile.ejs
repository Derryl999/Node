<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      body {
        background-color: seagreen;
        color: white;
        text-align: center;
        padding: 30px;
      }
      h1 {
        font-size: 50px;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-align: center;
      }
      h2 {
        font-size: 30px;
        text-transform: uppercase;
        letter-spacing: 2px;
        text-align: center;
      }
      p,
      li {
        font-size: 26px;
        text-align: center;
      }
    </style>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kinnigoli</title>
  </head>
  <body>
    <%- include('partials/nav') %>
    <h1>Welcome to the profile of <%= person %></h1>
    <p><strong>age:</strong><%= data.age %></p>
    <p><strong>status:</strong><%= data.status %></p>
    <h2>hobbies</h2>
    <ul>
      <% data.hobbies.forEach(function(hobby){ %>
      <li><%=hobby%></li>
      <% }) %>
    </ul>
  </body>
</html>
